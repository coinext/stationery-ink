    <artifactId>stationery-ink-stormclient</artifactId>
    <packaging>jar</packaging>

    <properties>
        <storm.version>0.9.0.1</storm.version>
        <start-class>org.tommy.stationery.ink.stormclient.StormClient</start-class>
    </properties>

    <dependencies>
        <!--<dependency>
            <groupId>${project.groupId}</groupId>
